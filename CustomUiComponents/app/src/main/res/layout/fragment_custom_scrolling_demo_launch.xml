<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/default_padding">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top_horizontal"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_left_vertical"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_right_vertical"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <Button android:id="@+id/btn_launch_scrolling_rails"
        style="@style/StyledButton"
        android:layout_width="@dimen/button_width_default"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_padding"
        android:text="@string/btn_launch_scrolling_rails"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right_vertical"
        app:layout_constraintStart_toStartOf="@+id/guideline_left_vertical"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@+id/guideline_top_horizontal" />
    <Button android:id="@+id/btn_launch_image_flash_view"
        style="@style/StyledButton"
        android:layout_width="@dimen/button_width_default"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="@dimen/default_padding"
        android:text="@string/btn_launch_image_flash"
        app:layout_constraintEnd_toStartOf="@id/guideline_right_vertical"
        app:layout_constraintStart_toStartOf="@id/guideline_left_vertical"
        app:layout_constraintTop_toBottomOf="@+id/btn_launch_scrolling_rails" />
    <Button android:id="@+id/btn_launch_shape_flash_view"
        style="@style/StyledButton"
        android:layout_width="@dimen/button_width_default"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="@dimen/default_padding"
        android:text="@string/btn_launch_shape_flash"
        app:layout_constraintEnd_toStartOf="@id/guideline_right_vertical"
        app:layout_constraintStart_toStartOf="@id/guideline_left_vertical"
        app:layout_constraintTop_toBottomOf="@id/btn_launch_image_flash_view" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_bottom_horizontal"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75" />

</androidx.constraintlayout.widget.ConstraintLayout>
